{
  "name": "naha-mc-helper",
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:css": "tailwindcss -i src/input.css -o dist/output.css",
    "build:installer": "cd tools/minecraft-installer && cargo build --release",
    "build:electron": "electron-builder",
    "build:all": "npm run build:installer && npm run build",
    "start": "electron .",
    "make": "electron-forge make",
    "dist": "npm run build:all && electron-builder",
    "dist:win": "npm run build:all && electron-builder --win",
    "dist:portable": "npm run build:all && electron-builder --win portable",
    "dist:setup": "npm run build:all && electron-builder --win nsis",
    "dist:both": "npm run build:all && electron-builder --win nsis portable",
    "package": "npm run build:all && electron-packager . naha-mc-helper --platform=win32 --arch=x64 --out=dist-package --overwrite --ignore=node_modules/electron-packager --ignore=node_modules/electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src --ext .ts,.svelte",
    "lint:fix": "eslint src --ext .ts,.svelte --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Electron app with Svelte, Tailwind CSS, DaisyUI, and TypeScript",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@eslint/js": "^9.35.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tsconfig/svelte": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.1.13",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-project-structure": "^3.13.3",
    "eslint-plugin-svelte": "^3.12.3",
    "postcss": "^8.5.6",
    "svelte": "^5.39.2",
    "svelte-eslint-parser": "^1.3.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.6"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "electron-updater": "^6.6.2",
    "yauzl": "^3.2.0"
  },
  "build": {
    "appId": "com.naha.mc-helper",
    "productName": "NAHA MC Helper",
    "directories": {
      "output": "dist-electron-fixed"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "src/shared/services/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "tools/minecraft-installer/target/release/minecraft-installer.exe",
        "to": "minecraft-installer.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "publish": {
      "provider": "github",
      "owner": "perlytiara",
      "repo": "NAHA-MC-Helper"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
